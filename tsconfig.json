{
  "compilerOptions": {
    "outDir": "dist/cjs",
    "target": "ES2020",
    "module": "CommonJS",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "jsx": "react-native",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}